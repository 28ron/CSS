one{
    border: 2px solid blue;
    padding-top: 20px;
    padding-left: 20px;
    padding-bottom: 20px;
    padding-right: 20px;
    /*The four padding= padding:20px:
    padding:20px 20px 20px 20px */
    height: 50px;
    width: 50px;
    box-sizing: border-box;
    margin:0 auto;
    /*margin allows negative values while padding does not. 
    Inherit value takes from parent*/
}

